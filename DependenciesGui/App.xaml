             Startup="App_Startup"
             Exit="App_Exit">
    <Application.Resources>
        <ResourceDictionary >
            <!--<Style TargetType="TextElement">
                <Setter Property="FontSize" Value="24"/>
            </Style>

            --><!-- For controls inheriting from Control --><!--
